@model IEnumerable<EgolePayUsersManagementSystem.Data.FileUpload>
@using EgolePayUsersManagementSystem.Data
@{
    ViewData["Title"] = "Index";
}

<h1>Upgrade Requests</h1>

<p>
    <a asp-action="Create">Request New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DocumentPath1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DocumentPath2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a href="~/docs/@item.DocumentPath1" target="_blank">View Doc 1</a>
            </td>
            <td>
                <a href="~/docs/@item.DocumentPath2" target="_blank">View Doc 2</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                @if (item.Status != UpgradeRequestStatus.Approved)
                {
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
